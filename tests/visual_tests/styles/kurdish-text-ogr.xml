<Map font-directory="../fonts/Noto/NotoNaskhArabic-Regular.ttf">

    <Parameters>
        <Parameter name="sizes">512,512</Parameter>
    </Parameters>

    <Style name="style">
        <Rule>
            <TextSymbolizer face-name="Noto Naskh Arabic Regular" size="50*2">[name]</TextSymbolizer>
        </Rule>
    </Style>

    <Layer name="layer">
    <StyleName>style</StyleName>
    <Datasource>
        <Parameter name="file">../data/kurdish.geojson</Parameter>
        <Parameter name="type">ogr</Parameter>
        <Parameter name="layer_by_index">0</Parameter>
    </Datasource>
    </Layer>
</Map>